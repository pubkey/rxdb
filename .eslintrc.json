{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4, {
                "MemberExpression": "off",
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "curly": ["error", "multi-or-nest"],
        "no-var": "error",
        "no-throw-literal": "error",
        "prefer-const": "error",
        "no-unused-vars": "error",
        "no-implicit-globals": "error",
        "no-global-assign": "error"
    }
}
