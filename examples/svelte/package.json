{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "preinstall": "(cd ../../ && npx yarn@1.22.22 pack ../../ --filename ./examples/svelte/rxdb-local.tgz)",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear --port 5000",
    "test:e2e": "testcafe \"path:$BROWSER_PATH --no-sandbox --disable-dev-shm-usage\" -e test/ --hostname localhost --selector-timeout 8000 --disable-features=LocalNetworkAccessChecks",
    "test": "npm run build && concurrently \"npm run start\" \"npm run test:e2e\" --kill-others --success first"
  },
  "//": "NOTICE: For the Github CI we use the local RxDB build (rxdb-local.tgz). In your app should just install 'rxdb' from npm instead",
  "devDependencies": {
    "rxdb": "file:rxdb-local.tgz",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "async-test-util": "2.5.0",
    "concurrently": "9.2.1",
    "rollup": "4.56.0",
    "rollup-plugin-css-only": "4.5.5",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-svelte": "7.2.3",
    "rollup-plugin-terser": "7.0.2",
    "rxjs": "7.8.2",
    "svelte": "4.2.20",
    "testcafe": "3.7.4"
  },
  "dependencies": {
    "@rollup/plugin-json": "6.1.0",
    "sirv-cli": "3.0.1"
  }
}
